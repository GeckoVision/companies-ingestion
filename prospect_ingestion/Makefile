PYTHON=$(shell which python)

#################################################################################
# Clean	                                                                        #
#################################################################################
clean:
	rm -rf .pytest_cache
	rm -rf dist

#################################################################################
# Build pex                                                                     #
#################################################################################
build: clean
	mkdir -p dist
	pex . -v --disable-cache -r requirements.txt -D prospect_ingestion/docs -o dist/prospect_ingestion.pex --python=$(PYTHON)

#################################################################################
# Run pex                                                                     #
#################################################################################
run:
	$(PYTHON) dist/prospect_ingestion.pex -m prospect_ingestion

#################################################################################
# Execute the build Docker                                                      #
#################################################################################
docker:
	rm -rf out
	DOCKER_BUILDKIT=1 BUILDKIT_PROGRESS=plain docker build . --target=app --output out

#################################################################################
# Deploy to prodution		                                                    #
#################################################################################
deploy-prod: docker
